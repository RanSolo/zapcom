{
  "extends": "./tsconfig.json",
  "compilerOptions": {
      "outDir": "../../dist/out-tsc",
      "types": ["node", "express"],
      "sourceMap": true,
      "noImplicitAny": true,
      "target": "es6",
      "module": "esnext",
      "moduleResolution": "node",
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "typeRoots": [
        "./node_modules/@types/"
      ],
  },
  "exclude": ["**/*.spec.ts"],
  "include": ["**/*.ts"]
}
